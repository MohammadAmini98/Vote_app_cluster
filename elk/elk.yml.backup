version: "3.9"

services:
  filebeat:
    image: docker.dc.afranet.co/elastic/filebeat:7.17.23
    container_name: filebeat
    user: root
    volumes:
      - redis-logs:/var/log/redis:ro
    configs:
      - source: filebeat-config
        target: /usr/share/filebeat/filebeat.yml
    networks:
      - frontend
      - backend
    depends_on:
      - logstash

  logstash:
    image: docker.dc.afranet.co/library/logstash:7.6.2
    container_name: logstash
    environment:
      - LOGSTASH_START=true
    ports:
      - "5044:5044"
    networks:
      - frontend
      - backend
      - elk
    volumes:
      - .:/etc/logstash
    command: logstash -f /etc/logstash/logstash.conf
    ports:
      - 12201:12201/udp
    command: logstash -f /etc/logstash/logstash.conf

  elasticsearch:
    image: docker.dc.afranet.co/library/elasticsearch:7.17.23
    container_name: elasticsearch
    environment:
      - node.name=elasticsearch
      - cluster.name=elasticsearch-cluster
      - discovery.type=single-node
      - ES_JAVA_OPTS=-Xms1g -Xmx1g
    ports:
      - "9200:9200"
    networks:
      - backend
    volumes:
      - esdata:/usr/share/elasticsearch/data

  kibana:
    image: docker.elastic.co/kibana/kibana:8.4.3
    container_name: kibana
    ports:
      - "5601:5601"
    networks:
      - backend
    depends_on:
      - elasticsearch

volumes:
 redis-logs:
 esdata:

networks:
  frontend:
    attachable: true
  backend:
    attachable: true
  elk:
    attachable: true

configs:
  filebeat-config:
    external: true
  logstash-config:
    external: true
  logstash-pipeline-config:
    external: true

